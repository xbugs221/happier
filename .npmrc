# pnpm configuration for Happy monorepo

# Use isolated node linker (symlinks + hard links)
node-linker=isolated

# Use shamefully-hoist for React Native compatibility (temporary)
shamefully-hoist=true

# Hoist React Native and related packages for Metro bundler compatibility
public-hoist-pattern[]=*react*
public-hoist-pattern[]=*expo*
public-hoist-pattern[]=@react-native*
public-hoist-pattern[]=@react-navigation*
public-hoist-pattern[]=*livekit*
public-hoist-pattern[]=@livekit*
public-hoist-pattern[]=expo-modules-core

# Strict peer dependencies
strict-peer-dependencies=false

# Auto install peers
auto-install-peers=true
